{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "wailsjs/*": ["./wailsjs/*"]
    }
  },
  "include": ["src", "wailsjs"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
